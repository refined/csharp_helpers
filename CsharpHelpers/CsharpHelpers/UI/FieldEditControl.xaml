<UserControl x:Class="CsharpHelpers.Controls.FieldEditControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             x:Name="FieldEdit"
             Height="40">
    <DockPanel>
        <Label Content="{Binding Path=Label, ElementName=FieldEdit}" Width="140" Margin="4"  
               VerticalContentAlignment="Center"/>
        <TextBox Text="{Binding Path=Text, ElementName=FieldEdit}" Width="100" Margin="4" 
                 VerticalContentAlignment="Center"/>
    </DockPanel>
</UserControl>
